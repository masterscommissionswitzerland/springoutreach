@model IEnumerable<SpringOutreach.Models.Outreach>

@{
    ViewData["Title"] = "Index";
}

<h1>All Outreaches</h1>

<table id="mainTable" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Place.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InternContact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InternResponsible)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Place.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InternContact)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InternResponsible)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td class="text-right no-sort">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="fa-regular fa-pen-to-square text-dark me-2"></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="fa-regular fa-trash-can text-dark me-2"></a>
                </td>
            </tr>
        }
    </tbody>
</table>