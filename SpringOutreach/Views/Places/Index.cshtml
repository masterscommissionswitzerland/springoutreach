@model IEnumerable<SpringOutreach.Models.Place>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col">
            <h1>All Places</h1>
        </div>
        <div class="col ms-auto">
            <p>
                <a asp-action="Create" class="btn btn-outline-dark float-end">Add Place</a>
            </p>
        </div>
    </div>
</div>

<div class="table-responsive">
    <table id="mainTable" class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Contact.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Canton)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Outreaches)
                </th>
                <th>
                    Status
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr id="index_td_block">
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">
                            @Html.DisplayFor(modelItem => item.Name)
                        </a>
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">
                            @Html.DisplayFor(modelItem => item.Contact.Name)
                        </a>
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">
                            @Html.DisplayFor(modelItem => item.City)
                        </a>
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">
                            @Html.DisplayFor(modelItem => item.Canton)
                        </a>
                    </td>
                    <td>
                        @foreach (var year in item.Outreaches)
                        {
                            <a asp-action="Details" asp-route-id="@item.Id">
                                @Html.DisplayFor(modelItem => year.Year)
                            </a>
                        }
                    </td>
                    <td>
                        @foreach (var status in item.Outreaches)
                        {
                            <a asp-action="Details" asp-route-id="@item.Id">
                                @Html.DisplayFor(modelItem => status.Status.Name)
                            </a>
                        }
                    </td>
                    <td id="index_td" class="text-center no-sort">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="fa-regular fa-pen-to-square text-dark me-2"></a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="fa-regular fa-trash-can text-dark me-2"></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>