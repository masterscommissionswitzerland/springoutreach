@model SpringOutreach.ViewModels.SecondaryContactViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Add a Secondary Contact to the place</h1>
<hr />

<div class="container">
    <form asp-action="Create">
        <div class="row">
            <div class="col">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Mail" class="control-label"></label>
                    <input asp-for="Mail" class="form-control" />
                    <span asp-validation-for="Mail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ResponsibleFor" class="control-label"></label>
                    <input asp-for="ResponsibleFor" class="form-control" />
                    <span asp-validation-for="ResponsibleFor" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SecondaryContactPosition" class="control-label"></label>
                    <select asp-for="SecondaryContactPositionId"
                            asp-items="@(new SelectList(Model.SecondaryContactPosition, nameof(Position.Id), nameof(Position.Title)))" class="form-select">
                    </select>
                </div>
                <div class="form-group mt-2">
                    <a class="btn btn-outline-dark" asp-action="Details" asp-controller="Places" asp-route-id="@Model.PlaceId">Back</a>
                    <input type="submit" value="Create" class="btn btn-outline-dark" />
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
